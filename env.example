# DevOps PoC Environment Configuration
# Azure Service Connections and API Settings

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Azure Configuration (PoC Requirements)
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_SUBSCRIPTION_ID=your_subscription_id_here

# Azure AD Authentication (PoC Requirement)
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your_tenant_id_here
AZURE_AD_AUDIENCE=api://your_client_id_here

# CosmosDB Configuration (PoC Requirement)
COSMOS_DB_URI=https://your_cosmos_account.documents.azure.com:443/
COSMOS_DB_KEY=your_cosmos_db_key_here
COSMOS_DB_DATABASE=your_database_name
COSMOS_DB_CONTAINER=your_container_name

# Azure Storage Configuration (PoC Requirement)
STORAGE_ACCOUNT_NAME=your_storage_account_name
STORAGE_CONNECTION_STRING=your_storage_connection_string_here
STORAGE_CONTAINER_NAME=your_container_name

# Logic Apps Configuration (PoC Requirement)
LOGIC_APP_TRIGGER_URL=your_logic_app_trigger_url_here
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# Resource Group and Location
AZURE_RESOURCE_GROUP=your_resource_group_name
AZURE_LOCATION=your_azure_region

# Additional Azure Service Endpoints
STORAGE_BLOB_ENDPOINT=https://your_storage_account.blob.core.windows.net/
STORAGE_FILE_ENDPOINT=https://your_storage_account.file.core.windows.net/
STORAGE_QUEUE_ENDPOINT=https://your_storage_account.queue.core.windows.net/
STORAGE_TABLE_ENDPOINT=https://your_storage_account.table.core.windows.net/
